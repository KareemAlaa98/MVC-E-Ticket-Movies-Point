@model List<Actor>

<h2 class="mt-2">Actors</h2>
@if (User.IsInRole("Admin"))
{
    <td><a href="/actors/create"> Add new Actor </a></td>
}
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col"></th>
            <th scope="col">Name</th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><img src="/images/cast/@item.ProfilePicture"/></td>
                <td>@item.FirstName @item.LastName</td>
                <td><a href="/actors/details/@item.Id"> Learn More </a></td>
                <td><a href="/actors/movies/@item.Id"> @item.FirstName's Movies on our Website </a></td>
                @if (User.IsInRole("Admin"))
                {
                    <td><a href="/actors/edit/@item.Id"> Edit </a></td>
                    <td><a href="/actors/delete/@item.Id"> Delete </a></td>
                }
            </tr>
        }
    </tbody>
</table>