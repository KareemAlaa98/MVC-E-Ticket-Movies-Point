@model Movies_Point.ViewModels.ActorViewModel

@{
    SelectList listOfMovies = new SelectList(ViewBag.listOfMovies, "Id", "Name");
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="@ViewData["action"]">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="Id" class="form-control" type="hidden"/>

            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bio" class="control-label"></label>
                <input asp-for="Bio" class="form-control" />
                <span asp-validation-for="Bio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfilePicture" class="control-label"></label>
                <input asp-for="ProfilePicture" class="form-control" type="file" />
                <span asp-validation-for="ProfilePicture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="News" class="control-label"></label>
                <input asp-for="News" class="form-control" />
                <span asp-validation-for="News" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MoviesIds" class="control-label"> Actor Movies: </label>
                <select id="MoviesIds" asp-for="MoviesIds" asp-items="listOfMovies" multiple class="form-control"></select>
                <span asp-validation-for="MoviesIds" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Actors" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
