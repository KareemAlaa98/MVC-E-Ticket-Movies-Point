@model List<Category>

<h3 class="mt-2">Movie Categories</h3>
@if (User.IsInRole("Admin"))
{
    <a href="/categories/create"> Create New Category </a>    
}
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td><a href="/categories/details/@item.Id"> Show Movies </a></td>
                @if(User.IsInRole("Admin"))
                {
                    <td><a href="/categories/edit/@item.Id"> Edit </a></td>
                    <td><a href="/categories/delete/@item.Id"> Delete </a></td>
                }
            </tr>
        }
    </tbody>
</table>