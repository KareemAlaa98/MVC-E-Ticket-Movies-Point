@model List<Cinema>

<h2 class="mt-2">Cinemas</h2>
@if (User.IsInRole("Admin"))
{
    <td><a href="/cinemas/create"> Add new cinema </a></td>
}
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td><a href="/cinemas/details/@item.Id"> Show Movies </a></td>
                @if(User.IsInRole("Admin")){
                    <td><a href="/cinemas/edit/@item.Id"> Edit </a></td>
                    <td><a href="/cinemas/delete/@item.Id"> Delete </a></td>
                }
            </tr>
        }
    </tbody>
</table>