@model Movies_Point.ViewModels.CinemaViewModel

@{
    SelectList listOfMovies = new SelectList(ViewBag.listOfMovies, "Id", "Name");
}

<div class="row">
    <div class="col-md-4">
        <form asp-action=@ViewData["action"]>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

             <input asp-for="Id" class="form-control" type="hidden"/>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
          @*   <div class="form-group">
                <label asp-for="CinemaLogo" class="control-label"></label>
                <input asp-for="CinemaLogo" class="form-control" type="file" />
                <span asp-validation-for="CinemaLogo" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="MoviesIds" class="control-label">Cinema Movies:</label>
                <select asp-for="MoviesIds" asp-items="listOfMovies" class="form-control" ></select>
                <span asp-validation-for="MoviesIds" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="cinemas" asp-action="Index">Back to Cinemas</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
